<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/ikon_onboard_2">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_splash"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onboard_2_headline"
            android:textStyle="bold"
            android:fontFamily="@font/font_satoshi"
            android:textSize="25sp"
            android:textColor="@color/onboard_headline_color"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="12dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="28dp"
            android:layout_gravity="center"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/darkModeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="14dp">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@color/baseColor"
                    android:elevation="4dp"
                    app:cardCornerRadius="50dp"
                    android:backgroundTint="@color/theme_button_background"
                    app:cardElevation="8dp"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ikon_theme_moon"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"/>
                </com.google.android.material.card.MaterialCardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/onboard_2_dark_mode"
                    android:fontFamily="@font/font_satoshi"
                    android:textSize="18sp"
                    android:textColor="@color/onboard_headline_color"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lightModeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:backgroundTint="@color/theme_button_background"
                    android:elevation="4dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="8dp"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ikon_theme_sun"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"/>
                </com.google.android.material.card.MaterialCardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/onboard_2_light_mode"
                    android:fontFamily="@font/font_satoshi"
                    android:textSize="18sp"
                    android:textColor="@color/onboard_headline_color"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button_onboard"
            android:text="@string/button_continue"
            android:textSize="16sp"
            android:fontFamily="@font/font_satoshi"
            android:textColor="@color/onboard_button_text_color"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:padding="22dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>